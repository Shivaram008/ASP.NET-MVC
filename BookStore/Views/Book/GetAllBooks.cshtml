@model IEnumerable<BookStore.Models.BookModel>
@{
    Layout = "_Layout";
    ViewData["TItle"] = "All Books";
}
@{ 
    var i = 1;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetAllBooks</title>
</head>
<body>
    <div class="container">
        <h3 class="display-4">All Books</h3>
        <div class="row">
            
            @foreach(var book in Model)
            {
                var s = "~/Images/book" + i.ToString() + ".jpg";
                <div class="col-md-3">
                    <div class="card mb-4 shadow-sm" style="width: 15rem; height:auto; ">
                        <img src="@Url.Content(s)" style="width:100%;height:200px;" alt="logo" />
                        <div class="card-body bg-light">
                            <h5 class="card-title">@book.Title</h5>
                            <p class="card-text">@book.Description</p>
                            <a href="/book/getbook/@book.id" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
                i++;
            }
        </div>
    </div>
    

</body>
</html>
